
@model List<Employee>

<h1 class="text-primary display-6">Employee</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date of Birth</th>
            <th>Department</th>
        </tr>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Salary</td>
                    <td>@employee.DateofBirth.ToString("dd-MM-yyyy")</td>
                    <td>@employee.Department</td>
                <td>
                    <a 
                       asp-controller="Employee"
                       asp-action="View"
                       asp-route-id="@employee.Id"
                       class="btn btn-primary btn-sm">
                         View
                    </a>
                 
                </td>

                </tr>
            }
        </tbody>
    </thead>


</table>